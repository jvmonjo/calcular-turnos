#!/bin/sh

# Git hook pre-commit per incrementar autom√†ticament la versi√≥

# Colors per a la sortida
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "${YELLOW}üîÑ Incrementant versi√≥ autom√†ticament...${NC}"

# Executar script per incrementar versi√≥ patch
node scripts/bump-version.js patch

# Verificar si el script va tenir √®xit
if [ $? -eq 0 ]; then
  echo "${GREEN}‚úì Versi√≥ incrementada correctament${NC}"

  # Afegir els fitxers modificats al commit
  git add package.json
  git add js/version.js

  echo "${GREEN}‚úì Fitxers de versi√≥ afegits al commit${NC}"
else
  echo "${RED}‚úó Error incrementant la versi√≥${NC}"
  exit 1
fi

exit 0
